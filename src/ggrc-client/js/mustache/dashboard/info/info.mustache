<div class="row-fluid">
  <!-- Left side Get started column -->
  <div class="span3 side-wrap">
    <div class="inner-content">
      <section class="widget get-started">
        <header class="get-started__header">
          <h2>Get Started</h2>
        </header>
        <section class="get-started__content">
          {{> /static/mustache/dashboard/info/get_started.mustache}}
        </section><!-- Widget content end -->
      </section><!-- Widget end -->
    </div><!-- inner-content end -->
  </div>
  <!-- Right side workflow and task trees area -->
  <dashboard-widgets class="span9 content-wrap">
      <div class="inner-content">
        <section class="widget dashboard small-margin">
          <header class="header widget-nav">
            <div class="row-fluid">
              <div class="span12">
                <ul>
                  <li class="active workflow-tab">
                    <a href="javascript://">
                      My Workflows ({{workflow_count}})
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </header>
          <section class="content">
            {{{ renderLive workflow_view }}}
            {{#workflow_show_all}}
              <a href="javascript://" class="workflow-trigger show-all">Show all my workflows</a>
            {{/workflow_show_all}}
          </section>
        </section><!-- Widget end -->

      </div><!-- inner-content end -->
  </dashboard-widgets>
</div>
