{{#instance}}
  <div class="row-fluid">
    <div class="span12">
      {{#using cycle=instance.cycle}}
      {{#using workflow=cycle.workflow}}
        <a class="main-title {{class.category}} oneline" href="{{workflow.viewLink}}">
          {{title}}
        </a>
      {{/using}}
      {{/using}}
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <h6>Description</h6>
      <div class="rtf">
        {{{firstnonempty description '<span class="empty-message">None</span>'}}}
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="code">
        Code: {{slug}}
      </div>
    </div>
  </div>
{{/instance}}
