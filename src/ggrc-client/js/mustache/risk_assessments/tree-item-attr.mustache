{{#switch attr_name}}
  {{#case 'ra_manager'}}
    <model-loader {path}="'business-models/person'">
      <tree-field {source}="instance.ra_manager" {type}="loadedModel" {field}="'email'"/>
    </model-loader>
  {{/case}}
  {{#case 'ra_counsel'}}
    <model-loader {path}="'business-models/person'">
      <tree-field {source}="instance.ra_counsel" {type}="loadedModel" {field}="'email'"/>
    </model-loader>
  {{/case}}
  {{#case 'status'}}
    {{#using status=instance.status}}
      <span class="state-value-dot {{addclass 'state' status}}">
        {{status}}
      </span>
    {{/using}}
  {{/case}}

  {{#default}}
    {{get_default_attr_value attr_name instance}}
  {{/default}}
{{/switch}}
